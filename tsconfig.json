{
   "compilerOptions"       : {
      "lib"                      : ["es2020", "DOM"],
      "target"                   : "es2020",
      "module"                   : "es2020",
      "moduleResolution"         : "node",
      "jsx" : "react",
      "sourceMap"                : true,
      "outDir"                   : "./lib",
      "declaration"              : true,
      "plugins"                        : [
         {
            "name": "typescript-plugin-css-modules",
            "customMatcher": "\\.css$"
         }
      ]
   },
   "include": [
      "src/**/*"
   ]
}